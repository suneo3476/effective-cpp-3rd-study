{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run Current File",
            "type": "shell",
            "command": "make",
            "args": ["run", "FILE=${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Current File",
            "type": "shell",
            "command": "make",
            "args": ["build", "FILE=${file}"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
